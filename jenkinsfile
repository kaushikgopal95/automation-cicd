pipeline {
  agent any
  stages {
    stage('Run Playwright Tests on Netlify') {
      steps {
        sh 'npx playwright test'
      }
      post {
        always {
          archiveArtifacts artifacts: 'playwright-report/**/*'
          // junit 'playwright-report/*.xml' // If using JUnit reporter
        }
      }
    }
  }
}